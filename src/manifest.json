{
  "name": "Auto Prompt",
  "version": "0.0.1",
  "description": "ðŸ§  Auto Prompt â€” Automatically add and manage AI prompts. Switch modes, clean UI, full control â€” all in one lightweight extension.",
  "manifest_version": 3,
  "options_page": "options.html",
  "permissions": ["sidePanel", "storage", "tabs"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
